extends ../shared/template
block content
  .row
    .col-xs-12
      h2= client.email
      h5= client.tagline
  .row
    .col-xs-2
      a.thumbnail(href='#')
        img(src=client.photo)
    .col-xs-10
  .row
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Email
            th Phone
            th Facebook
            th Twitter
        body
          tr
            td= client.email
            td= client.phone
            td: a(href=client.facebook, target='_blank')= client.facebook
            td: a(href=client.twitter, target='_blank')= client.twitter
  .row
    .col-xs-4
      form(role='form', method='post', action='/message/#{client._id}')
        .radio
          label
            input(type='radio' name='mtype' value='text' checked=true)
            span Text
        .radio
          label
            input(type='radio' name='mtype' value='email')
            span Email
        .radio
          label
            input(type='radio' name='mtype' value='internal')
            span Internal
        .form-group
          label(for='message') Message
          textarea.form-control#message(name='message')

        button.btn.btn-success(type='submit') Send Message
    .col-xs-8

block scripts

